<div class="chat-line clearfix">
  <div class="user-icon">
    <img src="/images/BlueHead.png"/>
  </div>
  <div class="user-text">
    <div class="user-name">
      <div class="username">
        {{username}}
      </div>
      <div class="message" style="color:#{{color}}">
        {{message}}
      </div>
    </div>
  </div>
  <div class="user-timestamp">
    <div class="timestamp">
      {{#formatTimestamp timestamp}}{{/formatTimestamp}}
    </div>
  </div>
</div>